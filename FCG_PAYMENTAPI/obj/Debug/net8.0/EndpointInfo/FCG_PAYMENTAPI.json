{
  "openapi": "3.0.4",
  "info": {
    "title": "FCGProj API",
    "version": "v1"
  },
  "paths": {
    "/Payment/ExecutePayment": {
      "post": {
        "tags": [
          "Payment"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SalesDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/SalesDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/SalesDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/Payment/GetPaymentStatus": {
      "get": {
        "tags": [
          "Payment"
        ],
        "parameters": [
          {
            "name": "idSales",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/Payment/ConfirmPayment": {
      "post": {
        "tags": [
          "Payment"
        ],
        "parameters": [
          {
            "name": "idSales",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/Payment/CancelPayment": {
      "post": {
        "tags": [
          "Payment"
        ],
        "parameters": [
          {
            "name": "idSales",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/Payment/RefundPayment": {
      "post": {
        "tags": [
          "Payment"
        ],
        "parameters": [
          {
            "name": "idSales",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SalesDto": {
        "type": "object",
        "properties": {
          "idSales": {
            "type": "integer",
            "format": "int32"
          },
          "idPaymentMethod": {
            "type": "integer",
            "format": "int32"
          },
          "amount": {
            "type": "number",
            "format": "double"
          },
          "cardCode": {
            "type": "string",
            "nullable": true
          },
          "cardNumber": {
            "type": "string",
            "nullable": true
          },
          "cardHolderName": {
            "type": "string",
            "nullable": true
          },
          "expirationMonth": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "expirationYear": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "pixKey": {
            "type": "string",
            "nullable": true
          },
          "pixTransactionId": {
            "type": "string",
            "nullable": true
          },
          "paymentDate": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "Enter 'Bearer {token}'",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}